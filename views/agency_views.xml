<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Estructura de navegaci贸 Superior -->
    <menuitem name="Agency" id="menu_root"/>

    <!-- Configuration Menu -->
    <menuitem name="Configuration" id="menu_configuration" sequence="100" parent="menu_root"/>

    <!-- Vista Llista de Propietats -->
    <record model="ir.ui.view" id="agency_property_list">
        <field name="name">agency.property.list</field>
        <field name="model">agency.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-success="active==True" decoration-danger="active==False">
                <field name="active" column_invisible="1"/>

                <field name="address1" string="Address"></field>
                <field name="zip_id" string="Zip Code"></field>
                <field name="type_id" string="Type"></field>
                <field name="state"></field>
                <field name="area" string="Area(m2)"></field>
                <field name="owner_id" string="Owner"></field>
                <field name="owner_phone" optional="hide"></field>
            </list>
        </field>
    </record>

    <!-- Vista Formulari de Propietats -->
    <record model="ir.ui.view" id="agency_property_form">
        <field name="name">agency.property.form</field>
        <field name="model">agency.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group col="8">
                        <group string="DATA" col="4">
                            <field name="address1" colspan="2"></field>
                            <field name="address2" colspan="2"></field>
                            <field name="zip_id" string="Location" colspan="2"></field>

                            <group col="2">
                                <field name="owner_id" string="Owner"></field>
                                <field name="owner_phone" string="Phone"></field>
                            </group>
                            
                            <group col="2">
                                <field name="type_id" string="Type"></field>
                                <field name="state"></field>
                                <field name="area" string="Area(m2)"></field>
                            </group>
                        </group>

                        <group string="DESCRIPTION" col="4">
                            <field name="description" nolabel="1" colspan="4" widget="html" options="{'resizable':true}" placeholder="Lorem ipsum sit amet bokoblin..."></field>
                        </group>
                    </group>

                    <group>
                        <group string="ELEMENTS">
                            <field name="element_ids" nolabel="1">
                                <list>
                                    <field name="name"></field>
                                    <field name="area" string="Area(m2)"></field>
                                </list>

                                <form>
                                    <sheet>
                                        <field name="photo" widget="image" class="oe_avatar"></field>
                                        <group>
                                            <field name="name"></field>
                                            <field name="area" string="Area(m2)"></field>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>

                        <group string="PORTALS">
                            <field name="portal_ids" nolabel="1" widget="many2many">
                                <list create="0">
                                    <field name="name"></field>
                                    <field name="phone"></field>
                                    <field name="web" widget="url"></field>
                                </list>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acci贸 de Property -->
    <record model="ir.actions.act_window" id="agency_property_action">
        <field name="name">Properties</field>
        <field name="res_model">agency.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Submenu de Property -->
    <menuitem name="Properties" id="menu_properties" parent="menu_root" sequence="10" action="agency_property_action"/>

    

    <!-- Vista Llista de Types -->
    <record model="ir.ui.view" id="agency_type_list">
        <field name="name">agency.type.list</field>
        <field name="model">agency.type</field>
        <field name="arch" type="xml">
            <list string="Property Types" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Acci贸 de Types -->
    <record model="ir.actions.act_window" id="agency_type_action">
        <field name="name">PropertyTypes</field>
        <field name="res_model">agency.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Submenu de Types -->
    <menuitem name="Property Types" id="menu_types" parent="menu_configuration" action="agency_type_action"/>


    <!-- Vista Llista de Portal -->
    <record model="ir.ui.view" id="agency_portal_list">
        <field name="name">agency.portal.list</field>
        <field name="model">agency.portal</field>
        <field name="arch" type="xml">
            <list string="Portals" editable="bottom">
                <field name="name"></field>
                <field name="phone"></field>
                <field name="web" widget="url"></field>
                <field name="q_properties"></field>
            </list>
        </field>
    </record>

    <!-- Acci贸 de Portal -->
    <record model="ir.actions.act_window" id="agency_portal_action">
        <field name="name">Portals</field>
        <field name="res_model">agency.portal</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Submenu de Types -->
    <menuitem name="Imm. Portals" id="menu_portals" parent="menu_configuration" action="agency_portal_action"/>

</odoo>